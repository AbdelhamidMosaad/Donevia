rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow users to read, write, and delete their own user document
    match /users/{userId} {
      allow read, write, delete: if request.auth.uid == userId;
    }
    
    // Allow users to manage their own data within any subcollection
    // This is a secure way to manage user-specific data like tasks, notes, etc.
    match /users/{userId}/{collection}/{documentId} {
      allow read, write, delete: if request.auth.uid == userId;
    }

    // Allow users to manage documents in any sub-subcollection
    // This is necessary for nested data like flashcards within a deck
    match /users/{userId}/{collection}/{documentId}/{subcollection}/{subDocumentId} {
        allow read, write, delete: if request.auth.uid == userId;
    }
  }
}

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Lock down access to all documents by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read and write their own data in specific collections
    match /users/{userId}/{collection}/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to read and write their own profile data
    match /users/{userId}/profile/{settingId} {
       allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to read public flashcard decks
    match /publicDecks/{deckId} {
      allow read: if request.auth != null;
    }
  }
}

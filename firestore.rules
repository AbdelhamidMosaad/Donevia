rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users can only access their own user document subcollections.
    match /users/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }
    
    // Public flashcard decks can be read by anyone, but only created/updated
    // through server-side logic (which is why write is false).
    match /publicDecks/{deckId} {
      allow read: if true;
      allow write: if false; 
    }
  }
}
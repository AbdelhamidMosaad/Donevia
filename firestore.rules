
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the requesting user is the owner of the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Specific, stricter rule for Google Auth Tokens
    // This rule must come before the general /users/{userId} rule
    match /users/{userId}/googleAuthTokens/{tokenId} {
      // Only the owner can read, create, or update their own token.
      allow read, create, update: if isAuthenticated() && isOwner(userId);
      // Deny list and delete access to everyone to prevent leaking tokens and accidental deletion.
      allow list, delete: if false;
    }

    // General rule for all other user data
    match /users/{userId}/{document=**} {
      allow read, write: if isAuthenticated() && isOwner(userId);
    }
    
    // Rules for public data, if any
    match /publicDecks/{deckId} {
      allow get;
      allow list;
      allow write: if false; // Nobody can write directly to public decks
    }
  }
}
